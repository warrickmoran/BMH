<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
            
    <camelContext id="bmh-thrift-service-camel"
        xmlns="http://camel.apache.org/schema/spring"
        errorHandlerRef="errorHandler">

        <endpoint id="httpThriftEndpoint"
            uri="jetty:http://0.0.0.0:${bmh.thrift.service.port}${HTTP_SERVER_PATH}?${edex.requestsrv.http.properties}" />

        <route id="thriftService" streamCache="false">
            <from uri="httpThriftEndpoint" />
            <setBody>
                <simple>
                    bodyAs(javax.servlet.http.HttpServletRequest)
                </simple>
            </setBody>
            <bean ref="httpServiceExecutor" method="execute(${body}, ${in.header.CamelHttpServletResponse})"/>
        </route>
    </camelContext>
</beans>