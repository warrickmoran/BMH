<beans xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

 <bean id="transmitStatusTracker" class="com.raytheon.uf.edex.bmh.TransmitterStatusTracker" />

 <camelContext id="bmhTransmitStatusContext" xmlns="http://camel.apache.org/schema/spring"
  errorHandlerRef="errorHandler">

  <route id="bmhTransmitStatusRoute">
   <from uri="jms-generic:topic:BMH.DAC.Status" />
   <doTry>
    <pipeline>
     <bean ref="serializationUtil" method="transformFromThrift" />
     <bean ref="transmitStatusTracker" method="statusArrived" />
    </pipeline>
    <doCatch>
     <exception>java.lang.Throwable</exception>
     <to uri="log:bmh?level=ERROR" />
    </doCatch>
   </doTry>
  </route>

 </camelContext>

</beans>
