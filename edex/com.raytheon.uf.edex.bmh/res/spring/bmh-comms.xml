<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
                      http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                      http://camel.apache.org/schema/spring
                      http://camel.apache.org/schema/spring/camel-spring.xsd">

  <bean id="commsConfigurator" class="com.raytheon.uf.edex.bmh.comms.CommsConfigurator" />

  <bean id="commsConfigured" factory-bean="commsConfigurator"
    factory-method="configure" depends-on="bmhDbRegistered" />

  <camelContext id="clusteredBmhCommsConfigurator" xmlns="http://camel.apache.org/schema/spring"
    errorHandlerRef="errorHandler">

    <route id="bmhCommsConfiguratorRoute">
      <from uri="jms-durable:topic:BMH.Config" />
      <doTry>
           <bean ref="serializationUtil" method="transformFromThrift" />
          <filter>
              <simple>${body} not is "com.raytheon.uf.common.bmh.notify.config.TransmitterGroupConfigNotification"</simple>
              <stop />
          </filter>
        <bean ref="commsConfigurator" method="configure" />
        <doCatch>
          <exception>java.lang.Throwable</exception>
          <to uri="log:bmh?level=ERROR" />
        </doCatch>
      </doTry>
    </route>

  </camelContext>

  <bean factory-bean="contextManager" factory-method="registerClusteredContext">
    <constructor-arg ref="clusteredBmhCommsConfigurator" />
  </bean>
</beans>