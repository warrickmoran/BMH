<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<!-- static message generation -->

	<bean id="staticMessageGenerator" class="com.raytheon.uf.edex.bmh.tts.StaticMessageGenerator"
		init-method="initialize" />

	<bean id="ttsSynthesisFactory" class="com.raytheon.uf.edex.bmh.tts.TTSSynthesisFactory">
		<constructor-arg value="${bmh.tts.server}" />
		<constructor-arg value="${bmh.tts.port}" />
		<constructor-arg value="${bmh.tts.status.port}" />
		<constructor-arg value="${bmh.tts.connect-timeout}" />
		<constructor-arg value="${bmh.tts.nfs.dir}" />
		<constructor-arg value="${bmh.tts.threads}" />
	</bean>

	<!-- tts manager -->
	<bean id="ttsManager" class="com.raytheon.uf.edex.bmh.tts.TTSManager"
		destroy-method="dispose">
		<property name="synthesisFactory" ref="ttsSynthesisFactory" />
	</bean>

	<bean factory-bean="contextManager" factory-method="registerContextStateProcessor">
		<constructor-arg ref="bmh-tts" />
		<constructor-arg ref="ttsManager" />
	</bean>

	<camelContext id="bmh-static-msg-gen" xmlns="http://camel.apache.org/schema/spring"
		errorHandlerRef="errorHandler">

		<route id="staticMsgGenerate">
			<from uri="jms-durable:topic:BMH.Config" />
			<doTry>
				<bean ref="serializationUtil" method="transformFromThrift" />
				<filter>
					<method ref="staticMessageGenerator" method="checkSkipMessage" />
					<stop />
				</filter>
				<bean ref="staticMessageGenerator" method="process" />
				<split>
					<simple>${body}</simple>
					<bean ref="validatedMessageDao" method="persistCascade" />
					<setBody>
						<simple>${body.getId}</simple>
					</setBody>
					<to uri="jms-durable:queue:BMH.Transform" />
				</split>
				<doCatch>
					<exception>java.lang.Throwable</exception>
					<to uri="log:bmh?level=ERROR" />
				</doCatch>
			</doTry>
		</route>

	</camelContext>

	<camelContext id="bmh-tts" xmlns="http://camel.apache.org/schema/spring"
		errorHandlerRef="errorHandler">

		<route id="ttsEncodeAudio">
			<from uri="jms-durable:queue:BMH.TTS" />
			<doTry>
				<bean ref="broadcastMsgDao" method="getByID" />
				<bean ref="ttsManager" method="process" />
				<bean ref="broadcastMsgDao" method="saveOrUpdate" />
				<filter>
					<simple>${body.isSuccess} == false</simple>
					<stop />
				</filter>
				<setBody>
					<simple>${body.getId}</simple>
				</setBody>
				<to uri="jms-durable:queue:BMH.Schedule" />
				<doCatch>
					<exception>java.lang.Throwable</exception>
					<to uri="log:bmh?level=ERROR" />
				</doCatch>
			</doTry>
		</route>

	</camelContext>
</beans>
