<!-- Note: this spring configuration should only be used for testing & development 
	purposes. Nothing in here will be deployed on an operational system. -->

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
  http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

	<bean id="ttsManagerTester" class="com.raytheon.uf.edex.bmh.test.tts.TTSManagerTester"
		init-method="initialize" />

	<bean id="toneGenerationTesterUtil"
		class="com.raytheon.uf.edex.bmh.test.util.tones.ToneGenerationTester"
		init-method="initialize" />

	<!-- Route to handle incoming TEST data. -->
	<camelContext id="bmh-test-in" xmlns="http://camel.apache.org/schema/spring"
		errorHandlerRef="errorHandler">

		<endpoint id="testTTSConversionFileEndpoint"
			uri="file:${bmh.tts.test.directory.input}?delete=true" />

		<endpoint id="testToneGenerationFileEndpoint"
			uri="file:${bmh.util.tones.test.directory.input}?delete=true" />

		<route id="ttsTestEncodeAudio">
			<from uri="testTTSConversionFileEndpoint" />
			<doTry>
				<bean ref="ttsManagerTester" method="process" />
				<bean ref="broadcastMsgDao" method="persist" />
				<setBody>
					<simple>${body.getId}</simple>
				</setBody>
				<to uri="jms-durable:queue:BMH.TTS" />
				<doCatch>
					<exception>java.lang.Throwable</exception>
					<to uri="log:bmh?level=ERROR" />
				</doCatch>
			</doTry>
		</route>

		<route id="testToneGeneration">
			<from uri="testToneGenerationFileEndpoint" />
			<doTry>
				<bean ref="toneGenerationTesterUtil" method="process" />
				<doCatch>
					<exception>java.lang.Throwable</exception>
					<to uri="log:bmh?level=ERROR" />
				</doCatch>
			</doTry>
		</route>
	</camelContext>

	<!-- Route to produce outgoing TEST results. -->
	<camelContext id="bmh-test-out" xmlns="http://camel.apache.org/schema/spring"
		errorHandlerRef="errorHandler">

		<route id="ttsTestAudioToWav">
			<from uri="jms-durable:queue:BMH.Schedule" />
			<doTry>
				<bean ref="broadcastMsgDao" method="getByID" />
				<bean ref="ttsManagerTester" method="convertToWav" />
				<doCatch>
					<exception>java.lang.Throwable</exception>
					<to uri="log:bmh?level=ERROR" />
				</doCatch>
			</doTry>
		</route>

	</camelContext>

</beans>