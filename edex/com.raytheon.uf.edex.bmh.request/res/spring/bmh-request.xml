<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"    
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <!-- BMH server location registration -->
    <bean factory-bean="serverLocationRegistry" factory-method="register">
        <constructor-arg value="bmh.server" />
        <constructor-arg value="http://${bmh.host}:${bmh.thrift.service.port}/services" />
    </bean>

    <bean factory-bean="serverLocationRegistry" factory-method="register">
        <constructor-arg value="bmh.comms.manager.linetap" />
        <constructor-arg value="tcp://${bmh.host}:${bmh.comms.manager.port.linetap}/" />
    </bean>

    <bean factory-bean="serverLocationRegistry" factory-method="register">
        <constructor-arg value="bmh.comms.manager.broadcast" />
        <constructor-arg value="tcp://${bmh.host}:${bmh.comms.manager.port.broadcast}/" />
    </bean>
    
    <bean factory-bean="serverLocationRegistry" factory-method="register">
        <constructor-arg value="bmh.practice.comms.manager.linetap" />
        <constructor-arg value="tcp://${bmh.host}:${bmh.practice.comms.manager.port.linetap}/" />
    </bean>

    <bean factory-bean="serverLocationRegistry" factory-method="register">
        <constructor-arg value="bmh.practice.comms.manager.broadcast" />
        <constructor-arg value="tcp://${bmh.host}:${bmh.practice.comms.manager.port.broadcast}/" />
    </bean>
</beans>