<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
    <bean id="legacyDatabaseImport" class="com.raytheon.uf.edex.bmh.legacy.DatabaseImport" init-method="checkImport" depends-on="bmhSessionFactory, bmhDbRegistered">
    	<constructor-arg ref="ttsVoiceManager" />
        <property name="runImport" value="${bmh.legacy.database.import}"/>
        <property name="databaseDir" value="${bmh.legacy.database.dir}"/>
    </bean>

    <bean id="importLegacyDbHandler" class="com.raythehon.uf.edex.bmh.legacy.handler.ImportLegacyDbHandler">
    	<constructor-arg ref="edexMessageLogger" />
    	<constructor-arg ref="practice_edexMessageLogger" />
    	<constructor-arg ref="ttsVoiceManager" />
    	<constructor-arg ref="practice_ttsVoiceManager" />    
    </bean>
    <bean factory-bean="handlerRegistry" factory-method="register">
        <constructor-arg
            value="com.raytheon.uf.common.bmh.request.ImportLegacyDbRequest" />
        <constructor-arg ref="importLegacyDbHandler" />
    </bean>
</beans>