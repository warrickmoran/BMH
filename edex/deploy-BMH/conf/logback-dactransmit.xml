<configuration debug="false" scan="true">
   
<!-- general application log -->
   <appender name="DacTransmitLog" class="ch.qos.logback.core.rolling.RollingFileAppender">
      <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
         <fileNamePattern>${BMH_HOME}/logs/dactransmit-${TRANSMITTER_GROUP}-%d{yyyyMMdd}.log</fileNamePattern>
         <maxHistory>30</maxHistory>
      </rollingPolicy> 

      <encoder>
         <pattern>%-5p %d [%t] %c{0}: %m%n</pattern>
      </encoder>
   </appender>

   <appender name="console" class="ch.qos.logback.core.ConsoleAppender">       
      <encoder> 
         <pattern>%-5p %d [%t] %c{0}: %m%n</pattern> 
      </encoder> 
   </appender>

   <appender name="asyncConsole" class="ch.qos.logback.classic.AsyncAppender">            
      <appender-ref ref="console" />
   </appender>

   <logger name="com.raytheon">
      <level value="DEBUG"/>
   </logger>
   <logger name="org.apache">
      <level value="INFO"/>
   </logger>

   <!-- default logging --> 
   <root> 
      <level value="DEBUG"/> 
      <appender-ref ref="asyncConsole"/> 
      <appender-ref ref="DacTransmitLog"/>
   </root> 
</configuration>

